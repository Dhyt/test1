<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/steps_history_items_date"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:text="2017-12-20(周三)"
        android:textColor="@color/gray"
        android:textSize="15sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/steps_history_items_steps"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"


        android:text="6666步"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/steps_history_items_exercise_energy"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"

        android:text="800kcal"
        android:textColor="@color/black"
        android:textSize="20sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/steps_history_items_same_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相当于"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/steps_history_items_same_as_food"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:textSize="20sp" />

</LinearLayout>



</LinearLayout>



</LinearLayout>