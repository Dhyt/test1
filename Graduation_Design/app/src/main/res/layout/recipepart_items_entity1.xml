<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/search_item_iv"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/search_item_tv_tittle"
        android:layout_toRightOf="@id/search_item_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="23sp"
        android:text="Tittle"
        />

    <TextView
        android:id="@+id/search_item_tv_content"
        android:layout_toRightOf="@id/search_item_iv"
        android:layout_below="@id/search_item_tv_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textSize="18sp"
        android:text="content"
        />
    <TextView
        android:id="@+id/search_item_tv_calory"
        android:layout_toRightOf="@id/search_item_iv"
        android:layout_below="@id/search_item_tv_tittle"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:text="Calory"
        />

</RelativeLayout>