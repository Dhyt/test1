<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/disease_details_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="糖尿病"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/disease_details_tv_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是简介"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="诱因"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/disease_details_tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是简介"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="临床表现"
            android:textColor="@color/gray"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/disease_details_tv_expression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是简介"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textColor="@color/gray"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/disease_details_tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是简介"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="膳食建议"
            android:textColor="@color/gray"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/disease_details_tv_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是简介"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>