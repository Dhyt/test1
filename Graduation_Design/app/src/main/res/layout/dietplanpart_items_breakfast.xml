<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/dietplan_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/dietplan_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/able_press_identify"
            android:text="菜名" />

        <TextView
            android:id="@+id/dietplan_item_tv_count"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="120g"
            android:textColor="@color/red" />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/dietplan_item_ll"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dietplan_item_tv_calory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="100.4kcal"
            android:textColor="@color/color_a15100" />


        <TextView
            android:id="@+id/dietplan_item_tv_protein"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingTop="5dp"
            android:text="蛋白质：25.1g"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/dietplan_item_tv_fat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="5dp"
            android:text="脂肪：10.5g"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dietplan_item_tv_carbohydrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingTop="5dp"
            android:text="碳水化合物:00.0g"
            android:textColor="@color/black"
            android:textSize="13sp" />


    </LinearLayout>


</LinearLayout>